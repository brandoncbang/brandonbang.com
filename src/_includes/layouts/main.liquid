<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta
      name="viewport"
      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
    >
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>
      {% if title %}
        {{ title }} - Brandon Bang
      {% else %}
        Brandon Bang - Full Stack Web Developer
      {% endif %}
    </title>

    <link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png?v=3">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png">

    <link rel="alternate" href="/feed.xml" type="application/atom+xml" title="Atom Feed">

    <link rel="preconnect" href="https://fonts.bunny.net">
    <link
      href="https://fonts.bunny.net/css?family=inter:100,200,300,400,500,600,700,800,900|fira-mono:400,500,700|lexend:500,600"
      rel="stylesheet"
    >
    <link rel="stylesheet" href="/css/styles.css">

    <script defer src="https://cdn.jsdelivr.net/npm/@alpinejs/focus@3.x.x/dist/cdn.min.js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
  </head>
  <body class="relative flex min-h-screen flex-col">
    <div class="flex flex-1 shrink-0 flex-col overflow-y-scroll">
      {% include 'header' %}

      <main class="grid flex-1">
        <div class="min-w-0">
          {{ content }}
        </div>
      </main>

      {% include 'footer' %}
    </div>

    <div
      data-terminal
      class="hidden flex-1 shrink-0 overflow-scroll whitespace-nowrap bg-black font-mono text-[0] text-white"
    >
      <pre
        data-ref="output"
        class="inline text-base"
      ></pre>
      <input
        data-ref="input"
        class="bg-transparent text-base focus:outline-none"
        type="text"
      >
    </div>

    <script type="module" src="/js/main.js"></script>
  </body>
</html>
