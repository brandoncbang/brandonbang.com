<mobile-nav class="sm:hidden">
  <div class="flex">
    <button type="button" data-show>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="h-8 w-8 text-black/75"
        aria-hidden="true"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
      <span class="sr-only">Open menu</span>
    </button>
  </div>

  <div
    class="absolute bottom-0 left-0 top-0 w-screen translate-x-full bg-white transition-transform"
  >
    <div class="p-6 lg:px-10">
      <button class="ml-auto block" type="button" data-hide>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="h-8 w-8 text-slate-700"
          aria-hidden="true"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
        <span class="sr-only">Close menu</span>
      </button>

      <nav class="mt-12 flex flex-col items-end space-y-8">
        <a class="text-xl font-medium text-slate-700 underline decoration-lime-500 decoration-2" href="/">Home</a>

        {% for item in navItems %}
          <a
            class="text-xl font-medium text-slate-700 underline decoration-lime-500 decoration-2"
            href="{{ item.url }}"
          >
            {{ item.name }}
          </a>
        {% endfor %}
      </nav>
    </div>
  </div>
</mobile-nav>
